<script>
    const data_{{ collectionName }} = [
        {% for item in items %}
            {
                temperature: {{ item.temperature | default('null') }},
                humidity: {{ item.humidity | default('null') }},
                pm25: {{ item.pm25 | default('null') }},
                time: "{{ item.time | default('') | date('d.m.Y H:i:s') }}"
            }{% if not loop.last %},{% endif %}
        {% endfor -%}
    ];
</script>

{% for field in contentType.getFieldsByFlag('showOnPage') %}
    
    <div class="card shadow mb-5">
        <div class="card-header">
            {{ field.title }}
        </div>
        <div class="card-body">
            
            <div id="chart-{{ field.name }}" style="width:100%; height:350px;"></div>
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    createPlot('chart-{{ field.name }}', data_{{ collectionName }}, '{{ field.name }}', 'time');
                });
            </script>
        
        </div>
    </div>

{% endfor %}
