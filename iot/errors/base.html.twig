<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}{{ app_name }}{% endblock %}</title>
    <base href="{{ app.request.baseUrl }}">

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {% block stylesheets -%}
        <link href="{{ asset('assets/iot/node_modules/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/iot/node_modules/bootstrap-icons/font/bootstrap-icons.css') }}" rel="stylesheet">
    {% endblock -%}

</head>
<body>

{% block body %}{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/iot/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('assets/iot/node_modules/plotly.js-dist-min/plotly.min.js') }}"></script>
    <script src="{{ asset('assets/iot/js/plotly-locale-ru-latest.js') }}"></script>
    <script src="{{ asset('assets/iot/js/script.js') }}"></script>
{% endblock %}

</body>
</html>
